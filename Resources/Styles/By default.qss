/* TOOLBAR -------------------------------------------------------------------------------*/
QToolButton
{
    background-color: #f7f7f7;
    color: #323234;
    padding: 2px;
    margin-left: 1px;
    border-radius: 4px;
}

QToolButton:hover
{
    background-color: #d1e2f2;
    border: 1px solid #bababa;
    color: #000000;

}

QToolButton#qt_toolbar_ext_button
{
    border: 1px solid #bababa;
    border-radius: 3px;
}

